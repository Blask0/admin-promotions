{
  "name": "promotions-admin",
  "vendor": "vtex",
  "version": "0.1.0",
  "title": "Promotions",
  "description": "Admin interface for Promotions",
  "mustUpdateAt": "2019-08-27",
  "registries": ["smartcheckout"],
  "scripts": {
    "postreleasy": "vtex publish --public"
  },
  "builders": {
    "node": "3.x",
    "graphql": "1.x",
    "react": "2.x",
    "pages": "0.x",
    "messages": "0.x"
  },
  "dependencies": {
    "vtex.admin": "1.x",
    "vtex.styleguide": "8.x"
  },
  "policies": [
    {
      "name": "read_prices"
    },
    {
      "name": "modify_prices"
    },
    {
      "name": "outbound-access",
      "attrs": {
        "host": "api.vtex.com",
        "path": "/{{account}}/conditions/{{type}}/condition/{{conditionId}}"
      }
    },
    {
      "name": "outbound-access",
      "attrs": {
        "host": "{{account}}.vtexcommercestable.com.br",
        "path": "/api/catalog_system/*"
      }
    }
  ],
  "billingOptions": {
    "free": true
  }
}
